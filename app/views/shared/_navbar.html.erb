<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" data-controller="hello">
  <div class="container-fluid">
    <div style="width=30%">
      <%= link_to "/", class: "navbar-brand" do %>
      <%= cl_image_tag "logolw.png", class: "logo" %>
      <% end %>
    </div>

    <div class=<%= current_page?(root_path) ? "d-none" : "wrap" %>>
      <div class="search" style="width=30%">
          <%= form_with url: products_path, method: :get, class: "d-flex flex-column justify-content-center" do %>
            <div class="d-flex" style="height: 35px !important;">
              <%= text_field_tag :buy,
                params[:buy],
                class: "searchTerm",
                placeholder: "Search for an item"
              %>
              <%= submit_tag "Search", class: "searchButton" %>
            </div>
          <% end %>
      </div>
    </div>

    <div style="width=30%">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>

  </div>

    <% if user_signed_in? %>
      <%= link_to "All Products", products_path, class: "nav-link #{"active" if current_page?('/products')}" %>
      <%= link_to "Dashboard", mydashboard_path, class: "nav-link #{"active" if current_page?('/myproducts')}" %>
      <%= link_to "Basket", basket_path, class: "nav-link #{"active" if current_page?('/basket')}" %>
       <ul style="list-style:none;">
        <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </div>
          </li>
        </ul>
      <% else %>
      <%= link_to "Login", new_user_session_path, class: "nav-link #{"active" if current_page?('/users/sign_in')}"%>
    <% end %>
</div>
