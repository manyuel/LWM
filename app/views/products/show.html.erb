
<div class="min-height mt-3">
  <%= link_to "Back", products_path, class: "back-button text-decoration-none" %>

<div class="show">
  <h1>Listing Details</h1>
</div>

<div class="container">
  <div class="row">
      <div class="col-6">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="false">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag @product.photos.first.key, class:"d-block", width: 600, height: 350, crop: :fill %>
            </div>
            <div class="carousel-item">
              <%= cl_image_tag @product.photos.second.key, class:"d-block", width: 600, height: 350, crop: :fill %>
            </div>
            <div class="carousel-item">
              <%= cl_image_tag @product.photos.third.key, class:"d-block", width: 600, height: 350, crop: :fill %>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    <div class="product-details d-flex col-6">
      <div class="card-product1 py-3">
        <h3 class="product-name"><strong><%= @product.item  %></strong></h3>
        <h4 class="product-name"><%= @product.description %></h4>
        <h4><strong>Buy now for:</strong> Â£<%= @product.price.round(2) %></h4>
        <div class="seller-avatar d-flex justify-content-left">
          <%= cl_image_tag @product.user.photo.key, class: "avatar" %>
          <%=  link_to "https://lewagon-alumni.slack.com/team/#{@product.user.slack_id}", class: "user-info align-text-center text-decoration-none" do %>
            <h4><%= "#{@product.user.name} (##{@product.user.batch})"%></h4>
          <% end %>
        </div>
        <div class="basket-b d-flex justify-content-bottom" data-controller="confirm">
          <%= button_to "Add to basket", product_transactions_path(@product), id: :confirm, method: :post, class:"button mt-0" %>
        </div>
      </div>
    </div>
  </div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Success!</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Succesfully added to basket
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <p class="button"><%= link_to "Go to Basket", basket_path, class: "text-decoration-none text-light" %></p>
        <%# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> %>
        <%= link_to "Continue Shopping", products_path, class: "button" %>
        <%# <button type="button" class="btn btn-primary">Save changes</button> %>
      </div>
    </div>
  </div>
</div>

