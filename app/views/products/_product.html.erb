<div class="indexcard col-sm-12 col-lg-4">
  <%= link_to product, class: 'text-decoration-none text-dark' do %>
    <%= cl_image_tag product.photos.first.key, width: 350, height: 250, crop: :fill %>
    <div class="bg-white mb-4">
      <div class="w-full d-flex justify-content-around">
        <h1 class="font-semibold flex-fill"><%= product.item %></h1>
        <h5 class="price mt-3 font-semibold flex-fill">Â£<%= '%.2f' % product.price %></h5>
        <div class="flex items-center gap-2"></div>
      </div>
      <p class="text-gray-500 text-sm"><%= product.description %></p>
      <div class="d-flex justify-content-left align-items-center">
        <%= cl_image_tag product.user.photo.key, class: "avatar" %>
        <p class="text-gray-500 text-sm"><%= product.user.name %></p>
      </div>
    </div>
  <% end %>
</div>
