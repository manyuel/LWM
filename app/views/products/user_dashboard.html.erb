<div class="container3 min-height">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= "active" if params[:active_tab] == "listed" || params[:active_tab].nil? %>" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">
        Listed
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= "active" if params[:active_tab] == "sold" %>" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">
        Sold
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= "active" if params[:active_tab] == "orders" %>" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">
        Orders
      </button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade <%= "show active" if params[:active_tab] == "listed" || params[:active_tab].nil? %>" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <%= render "products/my_products", listed_products: @listed_products %>
    </div>
    <div class="tab-pane fade <%= "show active" if params[:active_tab] == "sold" %>" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <%= render "products/sold_products", sold_products: @sold_products %>
    </div>
    <div class="tab-pane fade <%= "show active" if params[:active_tab] == "orders" %>" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
      <%= render "products/purchased_products", purchased_products: @purchased_products %>
    </div>
  </div>
</div>
