
<div class="d-flex justify-content-center">

  <div class="container3 mt-3 justify-content-center" style="width: 60%;">
    <% if @purchased_products.empty? %>
      <div class="listed" >
        <h1 class="d-flex justify-content-center mb-3">Orders</h1>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to "Buy a product", products_path, class: "button"  %>
      </div>
      <div class="empty">
        <h2 class="d-flex justify-content-center"><%="You're yet to make any purchases!"%></h2>
      </div>
    <% else %>
      <div class="listed" >
        <h1 class="d-flex justify-content-center mb-3">Orders</h1>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to "Buy more products", products_path, class: "button"  %>
      </div>
      <div class="row d-flex justify-content-center">
        <% @purchased_products.each do |product| %>
          <%= render "purchased", product: product %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
