<h2 class="d-flex justify-content-center mt-3">Log in</h2>

<div class="newform d-flex justify-content-center">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mt-3">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions justify-content-center">
      <%= f.button :submit, "Log in", class: "list-button d-flex justify-content-center" %>
      <br><%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
